{
  "name": "express-schema-server",
  "version": "3.3.0",
  "description": "Middleware for describing and validating your REST API routes using JSON schemas.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "start": "ts-node src/example/index.ts",
    "build": "yarn tidy:build && tsc",
    "production": "node build/example/index",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "lint-fix": "yarn lint --fix",
    "prettier": "prettier --write src/**/*.ts",
    "tidy": "yarn tidy:build && yarn tidy:coverage",
    "tidy:build": "rimraf build",
    "tidy:coverage": "rimraf coverage",
    "test": "jest",
    "test-watch": "jest --watch --collectCoverage",
    "coverage": "yarn tidy:coverage && jest --collectCoverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "validate": "yarn prettier && yarn build && yarn lint && yarn coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kallaspriit/express-schema-server.git"
  },
  "keywords": [
    "normalize",
    "javascript",
    "type",
    "types",
    "real",
    "number",
    "boolean"
  ],
  "author": "Priit Kallas <kallaspriit@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kallaspriit/express-schema-server/issues"
  },
  "homepage": "https://github.com/kallaspriit/express-schema-server#readme",
  "dependencies": {
    "@types/lodash": "^4.14.119",
    "@types/supertest": "^2.0.7",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "http-status-codes": "^1.3.0",
    "json-schema": "^0.2.3",
    "lodash": "^4.17.11",
    "normalize-type": "^1.5.1",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "tslint-config-strict": "^1.12.0",
    "z-schema": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^23.3.10",
    "@types/json-schema": "^7.0.1",
    "@types/z-schema": "^3.16.32",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "roots": [
      "src"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/src/index.ts",
      "**/routes/**/*.ts",
      "!**/routes/root.ts"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
