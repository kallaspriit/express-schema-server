{
  "name": "express-schema-server",
  "version": "1.12.0",
  "description": "Middleware for describing and validating your REST API routes using JSON schemas.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "start": "nodemon --inspect src/example/index.ts",
    "debug": "ts-node --inspect-brk src/example/index.ts",
    "build": "yarn tidy:build && tsc",
    "production": "node build/server",
    "deploy": "git pull && yarn install && yarn build && pm2 restart dagpay",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "lint-vscode": "tslint --project tsconfig.json",
    "lint-fix": "yarn lint --fix",
    "prettier": "prettier --write src/**/*.ts",
    "tidy": "yarn tidy:build && yarn tidy:coverage",
    "tidy:build": "rimraf build",
    "tidy:coverage": "rimraf coverage",
    "test": "jest",
    "test-watch": "jest --watch --collectCoverage",
    "coverage": "yarn tidy:coverage && jest --collectCoverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "precommit": "yarn build && yarn lint && prettier --list-different src/**/*.ts",
    "audit": "yarn prettier && yarn build && yarn lint && yarn coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kallaspriit/express-schema-server.git"
  },
  "keywords": ["normalize", "javascript", "type", "types", "real", "number", "boolean"],
  "author": "Priit Kallas <kallaspriit@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kallaspriit/express-schema-server/issues"
  },
  "homepage": "https://github.com/kallaspriit/express-schema-server#readme",
  "dependencies": {
    "@types/lodash": "^4.14.100",
    "@types/supertest": "^2.0.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "glob": "^7.1.2",
    "http-status-codes": "^1.3.0",
    "json-schema": "^0.2.3",
    "lodash": "^4.17.4",
    "nodemon": "^1.14.12",
    "normalize-type": "^1.4.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.1.4",
    "tslint-config-strict": "^1.3.0",
    "z-schema": "^3.18.4"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/glob": "^5.0.33",
    "@types/jest": "^20.0.8",
    "@types/json-schema": "^4.0.0",
    "@types/z-schema": "^3.16.31",
    "coveralls": "^2.13.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "roots": ["src"],
    "mapCoverage": true,
    "collectCoverage": false,
    "collectCoverageFrom": ["**/src/index.ts", "**/routes/**/*.ts", "!**/routes/root.ts"],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json"]
  }
}
