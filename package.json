{
	"name": "express-schema-server",
	"version": "1.5.0",
	"description": "Middleware for describing and validating your REST API routes using JSON schemas.",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"scripts": {
		"start": "tsc-watch --onSuccess \"node --inspect build/example\"",
		"tidy": "yarn tidy:build && yarn tidy:coverage",
		"tidy:build": "rimraf build",
		"tidy:coverage": "rimraf coverage",
		"build": "yarn tidy && tsc",
		"lint": "tslint --format codeFrame src/**/*.ts",
		"lint-fix": "tslint src/**/*.ts --fix",
		"test": "jest --verbose",
		"test-watch": "jest --watch",
		"coverage": "yarn tidy:coverage && jest --collectCoverage",
		"coveralls": "yarn coverage && cat ./coverage/lcov.info | coveralls",
		"prettier":
			"prettier --trailing-comma all --single-quote --use-tabs --no-bracket-spacing --print-width 120 --write src/**/*.ts",
		"precommit": "yarn lint && yarn test && yarn prettier && git add -A"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kallaspriit/express-schema-server.git"
	},
	"keywords": ["normalize", "javascript", "type", "types", "real", "number", "boolean"],
	"author": "Priit Kallas <kallaspriit@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kallaspriit/express-schema-server/issues"
	},
	"homepage": "https://github.com/kallaspriit/express-schema-server#readme",
	"dependencies": {
		"@types/supertest": "^2.0.3",
		"body-parser": "^1.18.2",
		"express": "^4.16.2",
		"glob": "^7.1.2",
		"json-schema": "^0.2.3",
		"normalize-type": "^1.4.0",
		"supertest": "^3.0.0",
		"ts-jest": "^21.1.4",
		"z-schema": "^3.18.4"
	},
	"devDependencies": {
		"@types/express": "^4.0.39",
		"@types/glob": "^5.0.33",
		"@types/jest": "^20.0.8",
		"@types/json-schema": "^4.0.0",
		"@types/z-schema": "^3.16.31",
		"coveralls": "^2.13.1",
		"husky": "^0.14.3",
		"jest": "^20.0.4",
		"prettier": "^1.6.1",
		"rimraf": "^2.6.1",
		"tsc-watch": "^1.0.8",
		"tslint": "^5.7.0",
		"tslint-config-prettier": "^1.5.0",
		"tslint-eslint-rules": "^4.1.1",
		"typescript": "^2.5.2"
	},
	"jest": {
		"transform": {
			"^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"roots": ["src"],
		"mapCoverage": true,
		"collectCoverage": false,
		"collectCoverageFrom": ["**/src/index.ts", "**/routes/**/*.ts", "!**/routes/index-route.ts"],
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
		"moduleFileExtensions": ["ts", "tsx", "js", "json"]
	},
	"config": {
		"ghooks": {
			"pre-commit": "npm run test:single && npm run check-coverage"
		}
	}
}
